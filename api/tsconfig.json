{
    "compilerOptions": {
      "target": "ES2022",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "useDefineForClassFields": true,
      "module": "commonjs",
      "rootDir": "./src",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "./dist",
      "removeComments": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true
    },
    "exclude": [
      "tests",
      "scripts",
      "dist",
      "bin",
      "src/**/*.spec.ts",
      "src/**/*.test.ts"
    ],
    "ts-node": {
      "transpileOnly": true
    }
  }
  